<div class="popover fade top in" style="top: -202px; left: 0px; display: block;">
  <div class="arrow" style="left: 19.811320754717%;"></div>
  <div class="popover-content">All content copyright © 2015 • All rights reserved.</div>
</div>

<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-xs-2">
        <div class="text-muted">
          <section class="copyright">
            <span class="hidden-xs">
            All content copyright <a href="/">{{@blog.title}}</a> <i class="fa fa-copyright"></i>
            2015 &bull; All rights reserved.
            </span>
            <span class="visible-xs">
              <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-placement="top"
                 data-content="All content copyright {{@blog.title}} &copy;&nbsp;2015 &bull; All rights reserved.">
                <i class="fa fa-copyright"></i>
              </a>
            </span>
          </section>
        </div>
      </div>
      <div class="col-sm-4 col-xs-10">
        <section class="social">
          <a href="https://twitter.com/{{@blog.title}}" target="_blank"><i class="fa fa-twitter fa-fw"></i></a>
          <a href="http://plus.google.com/{{@blog.title}}" target="_blank"><i
              class="fa fa-google-plus fa-fw"></i></a>
          <a href="http://www.facebook.com/{{@blog.title}}" target="_blank"><i class="fa fa-facebook fa-fw"></i></a>
          <a href="http://github.com/{{@blog.title}}" target="_blank"><i class="fa fa-github fa-fw"></i></a>
          <a href="{{@blog.url}}/rss/"><i class="fa fa-rss fa-fw"></i></a>
        </section>
      </div>
    </div>
  </div>
</footer>

{{! Ghost outputs important scripts and data with this tag }}
{{ghost_foot}}


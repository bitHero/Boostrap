<div id="publications">
    <input class="search form-control" type="text" placeholder="Filter" />
    <button class="sort" data-sort="pub-title">
        Sort by title
    </button>
    <ul class="list list-unstyled">{{#each publications}}
        <li>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title pub-title">
                        {{{title}}}
                    </h3>
                </div>
                <div class="panel-body pub-desc">
                        {{{description}}}
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-4 col-sm-push-8 text-right">
                            <span class="text-muted pub-date">{{date}}</span>
                        </div>
                        <div class="col-sm-8  col-sm-pull-4">
                            <ul class="list-inline">{{#each links}}
                                <li><a href="{{url}}" class="btn btn-{{#unless @index}}primary{{else}}default{{/unless}} btn-sm"><i class="{{icon}}"></i> {{name}}</a></li>{{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </li>{{/each}}
    </ul>
</div>

<script>
    var options = {
        valueNames: ['pub-title', 'pub-desc', 'pub-date']
    };
    var pubsList = new List('publications', options);
</script>